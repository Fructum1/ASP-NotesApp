@model ASP_NotesApp.Models.ViewModels.LoginViewModel
@{
 Layout = "~/Views/Shared/_LayoutUnauth.cshtml";
}

<form asp-controller="User" asp-action="Login" asp-antiforgery="true">
    <div class="register-form">
        <h2 class="title register">Войти в приложение</h2>
        <div class="edit-block">
            <input class="email form-control register" placeholder="Email" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="edit-block">        
            <input class="password form-control register" placeholder="Пароль" type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="edit-block">
            <input class="password form-control register" placeholder="Подтверждение пароля" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="error-message register" asp-validation-summary="All"></div>
        <div class="edit-block button">
            <input class="btn button register" type="submit" value="Войти" />
        </div>
        <p class="register-notes">Если вы еще не зарегистрированы - нажмите <a asp-controller="User" asp-action="Register">сюда</a></p>
    </div>
</form>