@model ASP_NotesApp.Models.ViewModels.Note.CreateViewModel

<h1>Создать заявку</h1>

<h4>Заявка</h4>
<hr />
<form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Pined" /> @Html.DisplayNameFor(model => model.Pined)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="NoteBody" class="control-label"></label>
                <input asp-for="NoteBody" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="modal-user-buttons">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </form>