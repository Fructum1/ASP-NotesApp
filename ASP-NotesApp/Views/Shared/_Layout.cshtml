@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP_NotesApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP_NotesApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script>
</head>
<body>
    <header class="header">
        <div class="d-flex flex-column flex-shrink-0 bg-light vh-100">
            <ul class="nav nav-pills nav-flush flex-column mb-auto text-center" id="header-menu">
                <li class="nav-item"> 
                    <a class="nav-link py-3 border-bottom" id="active-note"><img src="/img/note.svg" /> </a> 
                    </li>
                <li> 
                    <a class="nav-link py-3 border-bottom" id="archive-note"> <img src="/img/archive.svg" /> </a> 
                </li>
                <li> 
                    <a class="nav-link py-3 border-bottom" id="trash-note"> <img src="/img/deleteForever.svg" /> </a> 
                </li>
            </ul>
            <div class="dropdown border-top"> <a href="#" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false"> <img src="/img/avatar.svg" alt="mdo" width="24" height="24" class="rounded-circle"> </a>
            <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Register">Создать аккаунт</a>
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Edit" asp-route-id="@User.FindFirst(ClaimTypes.NameIdentifier).Value">Профиль</a>
                </li>
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" asp-controller="User" asp-action="Logout">Выйти</a>
                </li>
            </ul>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
